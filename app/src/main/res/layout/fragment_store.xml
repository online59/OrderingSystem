<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="56dp"
        tools:context=".view.ui.admin.StoreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="148dp"
                android:layout_height="148dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="44dp"
                android:src="@drawable/profile_image_placeholder"
                app:shapeAppearanceOverlay="@style/RoundedImageView"/>

        <TextView
                android:id="@+id/userFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Surname"
                android:layout_marginTop="12dp"
                style="@style/HeaderTextStyle"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin@email.com"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toBottomOf="@id/userFullName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separator"
                app:layout_constraintTop_toBottomOf="@id/userEmail"
                android:layout_marginTop="24dp"/>

        <ImageView
                android:id="@+id/ic_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/separator_1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_envelope"/>

        <TextView
                android:id="@+id/userEmailDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="user@email.com"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_email"
                app:layout_constraintBottom_toBottomOf="@id/ic_email"
                app:layout_constraintLeft_toRightOf="@id/ic_email"
                app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/ic_email"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_phone"/>

        <TextView
                android:id="@+id/userPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="088-888-8888"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_phone"
                app:layout_constraintBottom_toBottomOf="@id/ic_phone"
                app:layout_constraintLeft_toRightOf="@id/ic_phone"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
                android:id="@+id/separator_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separator"
                app:layout_constraintTop_toBottomOf="@id/ic_phone"
                android:layout_marginTop="24dp"/>

        <ImageView
                android:id="@+id/ic_box"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/separator_2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_box"/>

        <TextView
                android:id="@+id/buttonAddNewItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Add New Item"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_box"
                app:layout_constraintBottom_toBottomOf="@id/ic_box"
                app:layout_constraintLeft_toRightOf="@id/ic_box"
                app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
                android:id="@+id/ic_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/ic_box"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_edit"/>

        <TextView
                android:id="@+id/buttonEditItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Edit Item"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/ic_edit"
                app:layout_constraintLeft_toRightOf="@id/ic_edit"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
                android:id="@+id/separator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separator"
                app:layout_constraintTop_toBottomOf="@id/ic_edit"
                android:layout_marginTop="24dp"/>

        <ImageView
                android:id="@+id/ic_shipping"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/separator_3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_shipping"/>

        <TextView
                android:id="@+id/buttonShipping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Shipping"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_shipping"
                app:layout_constraintBottom_toBottomOf="@id/ic_shipping"
                app:layout_constraintLeft_toRightOf="@id/ic_shipping"
                app:layout_constraintRight_toRightOf="parent"/>


        <ImageView
                android:id="@+id/ic_received"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/ic_shipping"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_shipped_box"/>

        <TextView
                android:id="@+id/buttonReceived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Shipped Already"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_received"
                app:layout_constraintBottom_toBottomOf="@id/ic_received"
                app:layout_constraintLeft_toRightOf="@id/ic_received"
                app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
                android:id="@+id/ic_setting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/ic_received"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_settings"/>

        <TextView
                android:id="@+id/buttonSetting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Setting"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_setting"
                app:layout_constraintBottom_toBottomOf="@id/ic_setting"
                app:layout_constraintLeft_toRightOf="@id/ic_setting"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
                android:id="@+id/separator_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separator"
                app:layout_constraintTop_toBottomOf="@id/ic_setting"
                android:layout_marginTop="24dp"/>

        <ImageView
                android:id="@+id/ic_signout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/separator_4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="24dp"
                android:src="@drawable/ic_power"/>

        <TextView
                android:id="@+id/buttonSignOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Sing Out"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                style="@style/NormalTextStyle"
                app:layout_constraintTop_toTopOf="@id/ic_signout"
                app:layout_constraintBottom_toBottomOf="@id/ic_signout"
                app:layout_constraintLeft_toRightOf="@id/ic_signout"
                app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>